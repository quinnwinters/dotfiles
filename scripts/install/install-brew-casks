#!/bin/sh

brew tap homebrew/cask
brew tap homebrew/cask-versions

brew update
brew upgrade

applications=(
    1password
    alfred
    anaconda
    bartender
    caffeine
    docker
    dropbox
    handbrake
    iterm2
    signal
    spectacle
    sqlectron
    whatsapp
    visual-studio-code
    vlc
    zoom
)

for application in $applications ; do 
    brew install --cask $application
done

brew cleanup 
