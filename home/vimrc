" Visual editor settings
set number
set relativenumber
set ruler
set nowrap
set signcolumn=yes
set cmdheight=2
set nocompatible

" Enable syntax highlighting
if has('autocmd')
    filetype plugin indent on
endif
if has('syntax') && !exists('g:syntax_on')
    syntax enable
endif


" Disable scrollbars
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L

" Remove annoying alerts on error
set novisualbell
set noerrorbells

" Open your splits in the right places
set splitbelow
set splitright

" Share you clipboard properly
set clipboard=unnamed

" File modification setttings
set nobackup
set nowritebackup
set noswapfile
set autoread
set updatetime=100
set hidden
set encoding=utf8


" Search settings
set hlsearch
set ignorecase
set smartcase
set incsearch

" Set leader and local leader and use vim-which-key for nice auto-completion
let mapleader=" "
let maplocalleader=";"

" Esc shortcuts
inoremap jj <ESC>
inoremap kk <ESC>

" Use Ctrl+A/E in command mode like you would in shell
cnoremap <C-A> <Home>
cnoremap <C-E> <End>

" TAB/S-TAB in general mode will move to text buffer
nnoremap <TAB> :bnext<CR>
nnoremap <S-TAB> :bprevious<CR>

" Better tabbing
vnoremap > >gv
vnoremap < <gv
nnoremap > <S-v>><esc>
nnoremap < <S-v><<esc>

" Easier split navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
