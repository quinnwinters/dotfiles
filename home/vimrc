" Set leader and local leader and use vim-which-key for nice auto-completion
let mapleader="\<Space>"
let maplocalleader=","

" Setup WhichKey 
nnoremap <silent> <leader> :<c-u>WhichKey '<Space>'<CR>
"nnoremap <silent> <localleader> :<c-u>WhichKey ','<CR>
let g:which_key_map={}
let g:which_key_sep='-'

" leader keys starting with a => action commands 
let g:which_key_map.a={
	\ 'name' : '+actions',
	\ 'm' : [':MarkdownPreview<CR>', 'markdown-preview-on'],
	\ 'M' : [':MarkdownPreviewStop<CR>', 'markdown-preview-off'],
	\ 'r' : [':Codi<CR>', 'virtual-repl-on'],
	\ 'R' : [':Codi!<CR>', 'virtual-repl-off'],
	\ 'x' : ['<Plug>(vimtex-compile)', 'vimtex-compile']
	\}

map <leader>am :MarkdownPreview<CR>
map <leader>aM :MarkdownPreviewStop<CR>
map <leader>ar :Codi<CR>
map <leader>aR :Codi!<CR>
map <leader>ax <Plug>(vimtex-compile)
map <leader>av <Plug>(vimtex-view)
map <leader>av <Plug>(vimtex-view)

" leader keys starting with b => buffer commands
let g:which_key_map.b={
	\ 'name' : '+buffer',
	\ 'b' : ['enew<CR>', 'new-buffer'],
	\ 'o' : [':enew<BAR>:Telescope find_files<CR>', 'open-file-in-buffer'],
	\ 'O' : [':vsplit<BAR>:Telescope find_files<CR>', 'open-file-in-buffer-split'],
	\ 'f' : [':enew<BAR>:Telescope live_grep<CR>', 'search-project-in-buffer'],
	\ 'F' : [':vsplit<BAR>:Telescope live_grep<CR>', 'search-project-in-buffer-split'],
	\ 'l' : [':Telescope buffers<CR>', 'search-buffers'],
	\ 'L' : [':vsplit<BAR>:Telescope buffers<CR>', 'search-buffers-split'],
	\ 'n' : [':bnext<CR>', 'buffer-next'], 
	\ 'N' : [':bprev<CR>', 'buffer-prev']
	\}

map <leader>bb :enew<CR>
map <leader>bo :enew<BAR>:Telescope find_files<CR>
map <leader>bO :vsplit<BAR>:Telescope find_files<CR>
map <leader>bf :enew<BAR>:Telescope live_grep<CR>
map <leader>bF :vsplit<BAR>:Telescope live_grep<CR>
map <leader>bl :Telescope buffers<CR> 
map <leader>bL :vsplit<BAR>:Telescope buffers<CR>
map <leader>bn :bnext<CR>
map <leader>bN :bprev<CR>

" leader keys starting with c => code 
let g:which_key_map.c={
	\ 'name' : '+code',
	\ 'c' : ['<Plug>(NERDCommenterToggle)', 'code-comment-toggle'],
	\ 'f' : ['<Plug>(coc-format-selected)', 'code-format'],
	\ 'a' : ['<Plug>(coc-codeaction)', 'code-action'],
	\ 'x' : ['<Plug>(coc-fix-current)', 'code-quickfix'],
	\ 'r' : ['<Plug>(coc-rename)', 'code-rename']
	\}

map <leader>cc <Plug>(NERDCommenterToggle)
vmap <leader>cf <Plug>(coc-format-selected)
nmap <leader>cf <Plug>(coc-format-selected) 
nmap <leader>ca <Plug>(coc-codeaction)
nmap <leader>cx <Plug>(coc-fix-current)
nmap <leader>cr <Plug>(coc-rename)

" leader keys starting with g => git commands 
let g:which_key_map.g={
	\ 'name' : '+git', 
	\ 'a' : ['<Plug>(GitGutterStageHunk)', 'git-stage-hunk'],
	\ 'u' : ['<Plug>(GitGutterUndoHunk)', 'git-unstage-hunk'],
	\ 'A' : [':Git add -u<CR>', 'git-add-untracked'],
	\ 'c' : [':Git commit<CR>', 'git-commit'],
	\ 'f' : [':Git feat<CR>', 'git-commit-feat'],
	\ 'x' : [':Git fix<CR>', 'git-commit-fix'],
	\ 'd' : [':Git diff<CR>', 'git-diff'],
	\ 'D' : [':Gdiffsplit<CR>', 'git-diff-split'], 
	\ 'l' : [':Git pull<CR>', 'git-pull'], 
	\ 'p' : [':Git push<CR>', 'git-push'],
	\ 'L' : [':Git lg<CR>', 'git-log'], 
	\ 'P' : ['<Plug>(GitGutterPreviewHunk)', 'git-preview-hunk'],
	\ 'm' : ['<Plug>(git-messenger)', 'git-blame'], 
	\ 'n' : ['<Plug>(GitGutterNextHunk)', 'git-go-to-next-hunk'],
	\ 'N' : ['<Plug>(GitGutterPrevHunk)', 'git-go-to-prev-hunk'],
	\ 'G' : [':Ggrep', 'git-grep'],
	\ 'R' : [':Gread', 'git-read'], 
	\ 'W' : [':Gwrite', 'git-write'],  
	\ 'B' : [':GBrowse', 'git-browse-online']
	\}

map <leader>ga <Plug>(GitGutterStageHunk)
map <leader>gu <Plug>(GitGutterUndoHunk)
map <leader>gA :Git add -u<CR>
map <leader>gc :Git commit<CR>
map <leader>gf :Git feat<cr>
map <leader>gx :Git fix<cr>
map <leader>gd :Git diff<CR>
map <leader>gD :Gdiffsplit<CR>
map <leader>gl :Git pull<CR>
map <leader>gL :Git lg<CR>
map <leader>gp :Git push<CR>
map <leadeR>gP <Plug>(GitGutterPreviewHunk)
map <leader>gm <Plug>(git-messenger)
map <leader>gn <Plug>(GitGutterNextHunk)
map <leader>gN <Plug>(GitGutterPrevHunk)
map <leader>gG :Ggrep 
map <leader>gR :Gread
map <leader>gW :Gwrite
map <leader>gB :GBrowse<CR>

