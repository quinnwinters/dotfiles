" leader keys starting with x => todo.txt commands
let g:which_key_map.x={
	\ 'name' : '+todo-txt',
	\ '@' : [':%call todo#txt#sort_by_context()<CR>', 'todo-sort-by-context'], 
	\ '+' : [':%call todo#txt#sort_by_project()<CR>', 'todo-sort-by-project'], 
	\ 's' : [':%call todo#txt#sort_by_date()<CR>', 'todo-sort-by-date'], 
	\ 'S' : [':%call todo#txt#sort_by_due_date()<CR>', 'todo-sort-by-due-date'], 
	\ 'a' : [":call todo#txt#prioritize_add('A')<CR>", 'todo-task-priority-A'], 
	\ 'b' : [":call todo#txt#prioritize_add('B')<CR>", 'todo-task-priority-B'],
	\ 'c' : [":call todo#txt#prioritize_add('C')<CR>", 'todo-task-priority-C'],
	\ 'J' : [':call todo#txt#prioritize_increase()<CR>', 'todo-task-priority-increase'], 
	\ 'K' : [':call todo#txt#prioritize_decrease()<CR>', 'todo-task-priority-decrease'], 
	\ 'x' : [':call todo#txt#mark_as_done()<CR>', 'todo-task-mark-as-done'],
	\ 'X' : [':call todo#txt#mark_as_done()<CR>', 'todo-task-mark-selected-as-done'],
	\ 'D' : [':call todo#txt#remove_completed()<CR>', 'todo-task-remove-completed']
	\} 

nnoremap <leader>x@ :%call todo#txt#sort_by_context()<CR>
nnoremap <leader>x+ :%call todo#txt#sort_by_project()<CR>
nnoremap <leader>xs :%call todo#txt#sort_by_date()<CR>
nnoremap <leader>xS :%call todo#txt#sort_by_due_date()<CR>
map <leader>xa :call todo#txt#prioritize_add('A')<CR>
map <leader>xb :call todo#txt#prioritize_add('B')<CR>
map <leader>xc :call todo#txt#prioritize_add('C')<CR>
map <leader>xJ :call todo#txt#prioritize_increase()<CR>
map <leader>xK :call todo#txt#prioritize_decrease()<CR>
nnoremap <leader>xx :call todo#txt#mark_as_done()<CR>
vnoremap <leader>xX :call todo#txt#mark_as_done()<CR>
map <leader>xD :call todo#txt#remove_completed()<CR>


