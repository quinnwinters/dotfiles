alias master="git checkout master && git pull"
alias develop="git checkout develop && git pull"
alias github="cd ~/Documents/GitHub && ls -lhAFG"

function gCommitWChangelog() {
    git commit -m "(1){@:2}"
}

alias gitadd="gCommitWChangelog added"
alias gitfix="gCommitWChangelog fixed"
alias gitrm="gCommitWChangelog removed"
alias gitdep="gCommitWChangelog deprecated"
alias gitsec="gCommitWChangelog security"
alias gitch="gCommitWChangelog changed"
alias gitrefac="gCommitWChangelog refactor"
alias gitrev="gCommitWChangelog revert"
alias gitstyle="gCommitWChangelog style"
alias gittest="gCommitWChangelog test"
alias gitdoc="gCommitWChangelog docs"
