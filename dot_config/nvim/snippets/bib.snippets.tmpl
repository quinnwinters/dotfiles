snippet @accepted "Accepted for publication" bA
@preprint{ ${1:name} ,
  author 	= 	{${2:author}},
  title 	= 	{${3:title}},
  journal 	= 	{${4:journal}},
  note 		= 	{(in press)}
}
$0
endsnippet

snippet @preprint "Pre-print publication" bA
@preprint{ ${1:name} ,
  author 	= 	{${2:author}},
  title 	= 	{${3:title}},
  month		= 	{${4:MMM}},
  year 		= 	{${5:YYYY}},
  url 		= 	{${6:https://arxiv.org/thing}},
