snippet @arxiv "Publication archive arXiv information" wA
  archivePrefix = 	{arXiv},
  eprint 	= 	{${1:XXXX.XXXX}},
  primaryClass 	= 	{${2:subject-classification}}
endsnippet

snippet @notes "Online notes" bA
@unpublished{ ${1:name} ,
  author 	= 	{${2:author}},
  title 	= 	{${3:title}},
  month		= 	{${4:MMM}},
  year 		= 	{${5:YYYY}},
  url 		= 	{${6:https://arxiv.org/thing}},
  note 		= 	{(Pre-Print)}
}
endsnippet
